# База данных
# Для локальной разработки используйте SQLite или PostgreSQL
# Для Vercel используйте PostgreSQL (например, от Neon, Supabase или Vercel Postgres)
DATABASE_URL="postgresql://user:password@localhost:5432/reddit_cabinet"
# Или для SQLite (локально):
# DATABASE_URL="file:./dev.db"

# JWT секретный ключ (минимум 32 символа)
# Сгенерируйте случайный ключ: openssl rand -base64 32
JWT_SECRET="change-this-to-a-random-secret-key-min-32-chars"

# MEGA синхронизация (опционально)
# Email от аккаунта MEGA
MEGA_EMAIL="your-email@example.com"
# Пароль от аккаунта MEGA
MEGA_PASSWORD="your-password"
# Recovery Key (20 символов) - найдите в настройках MEGA
MEGA_RECOVERY_KEY="your-recovery-key-20-chars"

# SMTP настройки для отправки email (опционально)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@yourdomain.com"

# URL приложения (для ссылок в email)
# Для локальной разработки:
NEXT_PUBLIC_APP_URL="http://localhost:3000"
# Для продакшена (замените на ваш домен):
# NEXT_PUBLIC_APP_URL="https://your-domain.vercel.app"

# Node Environment
# Для продакшена Vercel автоматически установит NODE_ENV=production
NODE_ENV="development"







